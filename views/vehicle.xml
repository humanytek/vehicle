<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="vehicle_form_view">
            <field name="name">vehicle.form</field>
            <field name="model">vehicle</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" class="oe_inline" readonly="1"/>
                            </h1>
                        </div>
                        <group name="product_info">
                            <field name="product_id"/>
                            <field name="location_id"/>
                        </group>
                        <group name="characteristics" col="3">
                                <group name="sensors">
                                    <field name="humidity_rate"/>
                                    <field name="density"/>
                                    <field name="temperature"/>
                                </group>
                            <group name="rates">
                                <field name="damage_rate"/>
                                <field name="break_rate"/>
                                <field name="impurity_rate"/>
                            </group>
                            <group name="transgenic">
                                <field name="transgenic"/>
                            </group>
                        </group>
                        <group>
                            <field name="ticket"/>
                        </group>
                        <group>
                            <group col="1" name="weights">
                                <group>
                                    <field name="raw_kilos"/>
                                </group>
                            </group>
                            <group>
                                <field name="humid_kilos"/>
                                <field name="damaged_kilos"/>
                                <field name="broken_kilos"/>
                                <field name="impure_kilos"/>
                                <field name="clean_kilos"/>
                            </group>
                        </group>
                        <group>
                            <field name="stock_picking" attrs="{'invisible': [('state', '!=', 'done')]}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="vehicle_tree_view">
            <field name="name">vehicle.tree</field>
            <field name="model">vehicle</field>
            <field name="arch" type="xml">
                <tree string="Vehicle Tree">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="vehicle_list_action">
            <field name="name">Vehicle</field>
            <field name="res_model">vehicle</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first vehicle
                </p>
            </field>
        </record>

        <menuitem id="menu_zxc"
            parent="stock.menu_stock_root"
            name="Vehicles"
            sequence="2"/>

        <menuitem
            id="menu_action_vehicle_form"
            parent="menu_zxc"
            action="vehicle_list_action"/>
    </data>
</openerp>
